@model BinaShop.Core.ViewModels.ProductListViewModel
@{
    ViewBag.Title = "מוצרים";

}

<head>


    <link rel=stylesheet type="text/css" href="~/Content/ProductsHome.css">
    

       
</head>
<body>
    <div class="container">
        <h2>מוצרים</h2>
        <div class="row">
            <div class="col-sm-2" style="margin-bottom:20px;text-align:-webkit-center;">

                <div class="container">
                    <h4>סנן לפי קטגוריה</h4>
                    <button class="btn-block" style="width:150px;">

                        @Html.ActionLink("הכל", "Products", null, new { @class = Request["Category"] == null ? "list-group-item-active" : "list-group-item" })

                    </button>


                    @foreach (var cat in Model.ProductCategories)
                    {
                        <button class="btn-block" style="width:150px;">
                            @Html.ActionLink(cat.Category, "Products", new { Category = cat.Category }, new { @class = Request["Category"] == cat.Category ? "list-group-item-active" : "list-group-item" })
                        </button>
                    }
                </div>
            </div>
            <div class="col-sm-10" style="text-align:center;padding-right:45px;">




                @foreach (var item in Model.Products)
                {

                    <div class="col-sm-5" style="display:inline-block;margin-bottom:20px;">

                        <div class="col-sm-12">
                            <img class="img-fluid" src="~/Content/ProductImages/@item.Image" />
                        </div>
                        <div class="col-sm-12">
                            <strong>@Html.ActionLink(item.Name, "Details", new { id = item.Id })</strong>
                        </div>
                        <div class="col-sm-12">
                            <p>@item.Description</p>
                        </div>
                        <div class="col-sm-12">
                            <h4>₪@item.Price</h4>
                        </div>
                        <div class="col-sm-12">
                            <a href="@Url.Action("AddToBasket","Basket",new {Id=item.Id })" class="btn btn-full" style="margin-left:0px;padding:10px 5px;">הוסף לסל<ion-icon name="cart"></ion-icon></a>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
    <div class="clearfix col-sm-12"></div>
</body>


