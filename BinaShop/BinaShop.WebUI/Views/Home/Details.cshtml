@model BinaShop.Core.ViewModels.ProductViewModel

@{
    /**/

    ViewBag.Title = Model.Name + " פרטים";
}

<head>

    <link rel=stylesheet type="text/css" href="~/Content/DetailsHome.css">
    <link href="https://fonts.googleapis.com/css?family=Assistant" rel="stylesheet">

</head>
@foreach (var Banner in Model.ShopBanners.Where(x => x.Id == "feaf1d5a-4164-4bbd-a404-a89e0dd963a3"))
{
    <div class="sidenav1">
        <a href="@Banner.Link"><img src="~/Content/Banners/@Banner.Image" /></a>

    </div>
}
    <div class="container-fluid" id="containrf">
        <div class="col-lg-12 col-md-12 col-xl-12 col-sm-12 col-12" id="maincol">
            <div class="row">

                <div class="col-lg-5 col-md-5 col-xl-5 col-sm-5 col-12" id="col2">
                    <div class="col-lg-12 col-md-12 col-xl-12 col-sm-12 col-12" id="name">
                        <h5 id="h2">@Html.DisplayFor(model => model.Name)</h5>
                        <div class="dl-horizontal">

                            <div id="price">
                                ₪@Html.DisplayFor(model => model.Price)
                            </div>
                            <div id="order-btn"><a href="@Url.Action("AddToBasket", "Basket", new {  Id = Model.Product.Id})" class="btn btn-full" id="addtobasket"><ion-icon name="cart" id="carticon"></ion-icon>הוסף לסל</a></div>
                            <div id="description">
                                @Html.Raw(Model.Description.Replace(Environment.NewLine, "<br/>"))
                            </div>
                            <div class="accordion" id="accordionExample">
                                <div class="card" style="border: 0;border-top: 1px solid #DCBFB6;border-top-left-radius: 0;border-top-right-radius: 0;">
