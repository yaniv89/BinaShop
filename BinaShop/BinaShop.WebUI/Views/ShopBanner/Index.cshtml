@model IEnumerable<BinaShop.Core.Models.ShopBanner>

@{
    ViewBag.Title = "ניהול באנרים-חנות";
}
<style>
    table {
        text-align: center;
    }
</style>
<div class="container" style="text-align:-webkit-center !important">
    <h2>ניהול באנרים-חנות</h2>

    <div class="btn-link" style="text-align:right !important;">
        <a href="@Url.Action("Index", "Admin")">חזרה לעמוד ניהול</a>
    </div>

    @if (TempData["AB"] != null)
    {

        <div class="text-center alert alert-success" style="width:300px;text-align:-webkit-center;">
            @TempData["AB"]
        </div>

    }
    <table class="table table-responsive-lg table-responsive-xl table-responsive-md table-responsive-sm table-responsive">
        <tr>
            <th>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Link)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img class="img-fluid" style="height:250px;width:250px;" src="~/Content/Banners/@item.Image" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Link)
                </td>
                <td>
                    @Html.ActionLink("ערוך", "EditBanner", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>