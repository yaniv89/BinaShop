@using Microsoft.AspNet.Identity
<link rel=stylesheet type="text/css" href="~/Content/LoginPartial.css">
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-left" }))
    {
    @Html.AntiForgeryToken()

    <ul class="navbar-nav mr-auto" style="display:inline-block;">
        <li>
            @Html.ActionLink("שלום " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">התנתק</a></li>
    </ul>
    }
}
else
{
    <ul class="navbar-nav mr-auto">
        <li><a href="/Account/Register"><ion-icon name="contact"></ion-icon> הרשם</a></li>
        <li><a href="/Account/Login"><ion-icon name="log-in"></ion-icon> התחבר</a></li>
    </ul>
}
    <script src="https://unpkg.com/ionicons@4.5.0/dist/ionicons.js"></script>
