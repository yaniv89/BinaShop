<!DOCTYPE html >
<html lang="he" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>


    <link rel="stylesheet" id="bootstrap.rtl.full" href="~/Content/bootstrap.rtl.full.css" type="text/css" />
    <link rel="stylesheet" id="bootstrap.rtl.full.min" href="~/Content/bootstrap.rtl.full.min.css" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Bellefair&amp;subset=hebrew" rel="stylesheet">
    <link rel=stylesheet type="text/css" href="Vendors/Css/normalize.rtl.css">
    <link rel=stylesheet type="text/css" href="~/Content/style.css">

  
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav>
        <div class="row">
            <div class="logo">
                <a href="/Home/Index"><img src="~/Content/Bina_Logo.png" alt="לוגו הלוכדים של בינה" /></a>
            </div>

            <ul class="main-nav navbar-fixed-top">
                <li><a href="#">לוכדי חלומות</a></li>
                <li><a href="#">סדנאת לוכדי חלומות</a></li>
                <li><a href="/ProductCategoryManager/Index">ניהול קטגוריות</a></li>
                <li><a href="#">צור קשר</a></li>
                <li><a href="/ProductManager/Index">מנהל</a></li>
                <li><a href="#">התחבר</a></li>
                <li><a href="#">הרשם</a></li>

            </ul>
        </div>
    </nav>
   
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - יניב אבו</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
