@model BinaShop.Core.Models.ProductCategory

@{
    ViewBag.Title = "Create";
}
<div class="btn-link" style="text-align:right;">
    @Html.ActionLink("חזור לקטגוריות", "Index")
</div>
<div class="container" style="text-align:-webkit-center;">
    <h2>הוספת קטגוריה</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Category, htmlAttributes: new { @class = "control-label col-sm-2" })
                <div class="col-sm-10" style="width:fit-content;">
                    @Html.EditorFor(model => model.Category, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" value="צור קטגוריה" class="btn btn-full" style="background-color:#a3f5fa"/>
                </div>
            </div>
        </div>

    }
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
